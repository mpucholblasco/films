<h1><%= link_to t(:tools), tools_path %> / <%= t(:find_duplicates) %></h1>

<% if @duplicates.empty? %>
<p><%= t(:duplicates_not_found) %></p>
<% else %>
<% @duplicates.each_pair do |filename, file_disks|%>
<table cols="3">
	<tr>
		<th colspan="3"><%= filename %></th>
	</tr>
	<tr>
		<th><%= t(:filename) %></th>
		<th><%= t(:size_mb) %></th>
		<th><%= t(:disk) %></th>
	</tr>
	<% file_disks.each do |file| %>
	<tr>
		<td><%= file.filename %></td>
		<td><%= file.size_mb %></td>
		<td><%= link_to file.disk.name, disk_path(file.disk), :class => 'ref' %></td>
	</tr>
	<% end %>
</table>
<% end %>
<% end -%>
