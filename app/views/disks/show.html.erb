<h1><%= link_to 'Disks', disks_path %> / <%= @disk.name %></h1>

<%= link_to 'Edit', edit_disk_path(@disk), :class => 'button' %>
<p>
	<strong>Name:</strong>
	<%= @disk.name %>
</p>

<p>
	<strong>Type:</strong>
	<%= @disk.disk_type %>
</p>

<h2>Files</h2>
<table>
	<tr>
		<th>File name</th>
		<th>Size MB</th>
		<th>Actions</th>
	</tr>
	<%= render @file_disks %>
</table>
<%= will_paginate @file_disks %>

<h2>Add a file</h2>
<%= render 'file_disks/form' %>
